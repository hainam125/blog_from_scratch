<% if current_user.follow_this?(@user) %>
  <%= button_to "Unfollow", relationship_path(current_user.active_relationships.find_by(followed_id: @user.id), user_id: @user.id), method: :delete, class: "btn btn-primary", data: { disable_with: "Unfollow" }, remote: true %>
<% else %>
  <%= button_to "Follow", relationships_path(followed_id: @user.id), class: "btn btn-default", data: { disable_with: "Follow" }, remote: true %>
<% end %>