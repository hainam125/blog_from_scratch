<%= form_for @post, html: {id: "post_form"} do |f| %>
  <%= render "shared/error", object: @post %>
  <div class="form-group">
	<%= f.label :title %><br/>
	<%= f.text_field :title, class: "form-control" %>
  </div>
  <div class="form-group">
	<%= f.label :content %><br/>
	<%= f.text_area :content, class: "form-control", rows: 12 %>
  </div>
  <div class="action"><%= f.submit((yield :button), class: "btn btn-default") %></div>
<% end %>